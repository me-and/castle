[general]
accounts = adam@dinwoodie.org
metadata = ~/.cache/mail/offlineimap

[Account adam@dinwoodie.org]
localrepository = Local
remoterepository = Remote
synclabels = yes
labelsheader = X-Labels

[Repository Local]
type = GmailMaildir
localfolders = ~/.cache/mail/adam@dinwoodie.org
nametrans = lambda f: f.replace('&', '&-')
utime_from_header = yes

[Repository Remote]
type = Gmail
maxconnections = 4
remoteuser = adam@dinwoodie.org
remotepassfile = ~/.adam@dinwoodie.org-offlineimap-password
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda f: not f.startswith('To/') and not f.startswith('Git/') and not f.startswith('Cygwin/') and not f.startswith('Retention/') and f not in ('To', 'Git', 'Cygwin', 'Retention', '[Gmail]/Important')
nametrans = lambda f: f.replace('&-', '&')

[Account adam@mailtest.dinwoodie.org]
localrepository = LocalMBTest
remoterepository = RemoteMBTest

[Repository LocalMBTest]
type = Maildir
localfolders = ~/.cache/mail/adam@mailtest.dinwoodie.org
utime_from_header = yes

[Repository RemoteMBTest]
type = IMAP
remotehost = caracal.mythic-beasts.com
maxconnections = 4
remoteuser = adam@mailtest.dinwoodie.org
remotepassfile = ~/.adam@mailtest.dinwoodie.org-password
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[mbnames]
enabled = yes
filename = ~/.cache/mail/muttrc.mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"
incremental = no
