#!/usr/bin/env bash
set -eu

if ! command -v sponge &>/dev/null; then
	echo 'sponge must be in PATH' >&2
	exit 1
fi

if (( $# == 0 )); then
	echo 'No files specified' >&2
	exit 1
fi

rc=0
for f; do
	if cmp -s <(tail -c1 -- "$f") <(printf '\n'); then
		truncate -s-1 -- "$f"
	else
		printf 'Skipped %s\n' "$f" >&2
		rc=1
	fi
done

exit "$rc"
