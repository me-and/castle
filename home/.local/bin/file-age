#!/usr/bin/env bash
set -eu

human=
force=
while getopts hf opt; do
	case "$opt" in
		h)	human=YesPlease;;
		f)	force=YesPlease;;
	esac
done
shift "$((OPTIND - 1))"

if [[ -e "$1" ]]; then
	then="$(date -r "$1" '+%s')"
elif [[ "$force" ]]; then
	then=0
else
	echo "No such file $1" >&2
	exit 1
fi

now="$(date '+%s')"
diff="$((now - then))"

if [[ "$human" ]]; then
	if (( diff < 60 )); then
		unit='second'
		val="$diff"
	elif (( diff < (60*60) )); then
		unit='minute'
		val="$((diff/60))"
	elif (( diff < (60*60*24) )); then
		unit='hour'
		val="$((diff/60/60))"
	else
		unit='day'
		val="$((diff/60/60/24))"
	fi
	if (( val > 1 )); then
		plural='s'
	else
		plural=
	fi
	printf "%'d %s%s\n" "$val" "$unit" "$plural"
else
	echo "$diff"
fi
